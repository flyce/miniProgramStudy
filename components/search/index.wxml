<!--components/search/index.wxml-->
<view class="container">
    <view class="header">
        <view class="search-container">
            <image class="icon" src="images/search.png" />
            <input value="{{q}}" placeholder-class="in-bar" placeholder="书籍名" class="bar" auto-focus="{{true}}" bind:confirm="onConfirm" />
            <image class="cancel-img" src="images/cancel.png" bind:tap="onClear" />
        </view>
        <view class="cancel" bind:tap="onCancel">取消</view>
    </view>

    <view wx:if="{{!searching}}">
        <view class="history">
            <view class="title">
                <view class="chunk"></view>
                <text>历史搜索</text>
            </view>
            <view class="tags">
                <block wx:for="{{historyWords}}" wx:key>
                    <v-tag bind:tapping="onConfirm" text="{{item}}" />
                </block>
            </view>
        </view>
        <view class="history hot-search">
             <view class="title">
                <view class="chunk"></view>
                <text>热门搜索</text>
            </view>
            <view class="tags">
                <block wx:for="{{hotWords}}" wx:key>
                    <v-tag bind:tapping="onConfirm" text="{{item}}" />
                </block>
             </view>
        </view>
    </view>

    <view class="books-container" wx:if="{{searching}}">
        <block wx:for="{{bookArray}}" wx:key="{{item.id}}">
            <v-book text="{{item}}" class="book" />
        </block>
    </view>
</view>
